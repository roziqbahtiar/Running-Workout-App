<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".IntervalWorkoutActivity"
    android:visibility="visible">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/running_app_background"
        android:adjustViewBounds="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pace |"
        android:id="@+id/emtLabel"
        android:editable="false"
        android:clickable="false"
        android:focusable="false"
        android:gravity="right"
        android:textSize="@android:dimen/notification_large_icon_width"
        android:textIsSelectable="false"
        android:textColor="#ffffffff"
        android:typeface="sans"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emtVal"
        android:gravity="center"
        android:editable="false"
        android:clickable="false"
        android:focusable="false"
        android:textSize="45dp"
        android:textIsSelectable="false"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/emtLabel"
        android:layout_toRightOf="@+id/emtLabel"
        android:layout_toStartOf="@+id/paceLabel"
        android:layout_toLeftOf="@+id/paceLabel"
        android:text="0:00" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gmtVal"
        android:editable="false"
        android:clickable="false"
        android:focusable="false"
        android:textSize="@dimen/abc_dropdownitem_icon_width"
        android:textIsSelectable="false"
        android:textColor="#ff6ce8ff"
        android:layout_alignLeft="@+id/emtVal"
        android:layout_alignStart="@+id/emtVal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:layout_alignBaseline="@+id/timeLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/paceView"
        android:gravity="center"
        android:textIsSelectable="false"
        android:focusable="false"
        android:editable="false"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffffffff"
        android:text="Waiting for GPS"
        android:layout_below="@+id/emtVal"
        android:layout_toRightOf="@+id/emtLabel"
        android:layout_alignRight="@+id/paceLabel"
        android:layout_alignEnd="@+id/paceLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DistanceLabel"
        android:text="Distance: "
        android:editable="false"
        android:clickable="false"
        android:focusable="false"
        android:gravity="right"
        android:textSize="@dimen/abc_dropdownitem_icon_width"
        android:textIsSelectable="false"
        android:textColor="#ff6ce8ff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DistanceVal"
        android:editable="false"
        android:clickable="false"
        android:focusable="false"
        android:textSize="@dimen/abc_dropdownitem_icon_width"
        android:textIsSelectable="false"
        android:textColor="#ff6ce8ff"
        android:layout_alignTop="@+id/DistanceLabel"
        android:layout_toRightOf="@+id/DistanceLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="min/mile"
        android:id="@+id/paceLabel"
        android:textColor="#ffffffff"
        android:layout_alignBottom="@+id/emtVal"
        android:textSize="15dp"
        android:layout_alignRight="@+id/DistanceVal"
        android:layout_alignEnd="@+id/DistanceVal" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/partIndicatorGroup"
        android:layout_below="@+id/paceView"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_centerInParent="true">

        <RadioButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/radioButton1"
            android:textColor="#ffffffff"
            android:buttonTint="#ffffffff"
            android:clickable="false"
            android:checked="true" />

        <RadioButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/radioButton2"
            android:textColor="#ffffffff"
            android:buttonTint="#ffffffff"
            android:clickable="false" />

        <RadioButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/radioButton3"
            android:textColor="#ffffffff"
            android:buttonTint="#ffffffff"
            android:clickable="false" />

        <RadioButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/radioButton4"
            android:textColor="#ffffffff"
            android:buttonTint="#ffffffff"
            android:clickable="false" />

        <RadioButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/radioButton5"
            android:textColor="#ffffffff"
            android:buttonTint="#ffffffff"
            android:clickable="false" />

        <RadioButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/radioButton6"
            android:textColor="#ffffffff"
            android:buttonTint="#ffffffff"
            android:clickable="false" />

        <RadioButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/radioButton7"
            android:textColor="#ffffffff"
            android:buttonTint="#ffffffff"
            android:clickable="false" />
    </RadioGroup>

    <ImageView
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:id="@+id/circleView"
        android:background="@drawable/circle"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/linearLayout" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/pauseButton"
        android:background="@drawable/pause"
        android:layout_above="@+id/emtLabel"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/circleView"
        android:layout_toRightOf="@+id/emtVal"
        android:layout_toEndOf="@+id/emtVal"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignRight="@+id/DistanceVal"
        android:layout_alignEnd="@+id/DistanceVal">

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/rightButton"
            android:layout_gravity="center"
            android:background="@drawable/arrow_right" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/circleView"
        android:layout_toLeftOf="@+id/circleView"
        android:layout_toStartOf="@+id/circleView"
        android:layout_alignTop="@+id/linearLayout">

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/leftButton"
            android:layout_gravity="center"
            android:background="@drawable/arrow_left" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_above="@+id/pauseButton"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:id="@+id/timeLabel"
            android:textSize="@dimen/abc_action_bar_default_height_material"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff"
            android:visibility="visible"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Remaining"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffffff"
            android:typeface="sans"
            android:textSize="@dimen/abc_text_size_small_material" />
    </LinearLayout>

</RelativeLayout>
